{% from "../_includes/components/socials.njk" import share, network %}
{% from "../_includes/components/tag.njk" import tag %}
<!DOCTYPE html>
<html lang="en">
    <head>
        {% block head %}
            {% include "../_includes/head.njk" %}
        {% endblock %}
    </head>
    <body class="{{ body_class }}">
        <div class="wrapper">
            {% block header %}
                {% include "../_includes/components/header/header.njk" %}
            {% endblock %}
            <main class="content">
                {% block content %}
                    {% include "../_includes/components/banner.njk" %}
                    <section class="section tabs hidden md:block">
                        <div class="container xl:max-w-7xl">
                            {% include "../_includes/components/tabs.njk" %}
                        </div>
                    </section>
                    <section class="section">
                        <div class="container xl:max-w-7xl">
                            <div class="md:grid grid-cols-details gap-10 pt-6 md:pt-16 pb-6 md:pb-16">
                                <div class="content-wrap">
                                    <div class="flex flex-col content-heading" data-content-heading>
                                        <div class="flex flex-wrap gap-2 mb-2 md:hidden">
                                            {{ tag(text="Free OPTIONS") }}
                                            {{ tag(type="primary", text="Family Friendly") }}
                                            {{ tag(type="secondary", text="SOLD OUT") }}
                                        </div>
                                        <h1 class="text-heading font-bold capitalize flex items-center justify-between">
                                            {{ title }}
                                            {{ share(className="hidden md:flex") }}
                                        </h1>
                                        <div class="author flex flex-wrap">
                                            <a href="#">By
                                                <span class="text-primary">{{ author }}</span>
                                            </a>
                                            <a href="{{ link }}">{{ link }}</a>
                                        </div>
                                        {{ network() }}
                                        <div class="flex flex-col gap-2 mt-6 mb-6 md:hidden">
                                            <div class="flex gap-3 items-center">
                                                <i class="icon-Calendar text-xl text-black"></i>
                                                <p class="text-sm">Mon Apr 24, 09:00 - Sun Apr 30, 19:00</p>
                                            </div>
                                            <div class="flex gap-3 items-center">
                                                <i class="icon-map-pin text-xl text-black"></i>
                                                <p class="text-sm">Tankwa Town</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tabs md:hidden">
                                        {% include "../_includes/components/tabs.njk" %}
                                    </div>
                                    <div class="content-inner pt-4 pb-4">
                                        {{ content | safe }}
                                    </div>
                                </div>
                                <aside class="sidebar fixed md:relative z-10 md:z-0">
                                    <div class="sticky top-48">
                                        {% include "../_includes/components/card.njk" %}
                                        {% include "../_includes/components/payments/payments.njk" %}
                                    </div>
                                </aside>
                            </div>
                        </div>
                    </section>
                {% endblock %}
            </main>
            {% block footer %}
                {% set step_num = 2 %}
                {% set step_title = "Choose your tickets" %}
                {% set step_desc = "Select which ticket types you wish to purchase below or <a href='#' class='font-medium underline'>click here to browse resale tickets.</a>" %}
                {% include "../_includes/components/modal/modal-tickets.njk" %}
                <div class="pb-[140px] md:pb-0">
                    {% include "../_includes/components/footer.njk" %}
                </div>
            {% endblock %}
        </div>
        {% block scripts %}
            {% include "../_includes/scripts.njk" %}
        {% endblock %}
    </body>
</html>
