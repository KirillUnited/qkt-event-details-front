<!DOCTYPE html>
<html lang="en">
    <head>
        {% include "../_includes/head.njk" %}
        {% block head %}{% endblock %}
    </head>
    <body class="{{ body_class }} font-heebo">
        <div class="wrapper">
            {% block header %}
                {% include "../_includes/components/header.njk" %}
            {% endblock %}
            <main class="content">
                {% block content %}
                    {% include "../_includes/components/banner.njk" %}
                    <section class="section tabs">
                        <div class="container xl:max-w-7xl">
                            {% include "../_includes/components/tabs.njk" %}
                        </div>
                    </section>
                    <section class="section">
                        <div class="container xl:max-w-7xl">
                            <div class="md:grid grid-cols-details gap-10 pt-16 pb-16">
                                <div class="content-wrap">
                                    <div class="flex flex-col content-heading">
                                        <h1 class="text-heading font-bold capitalize flex items-center justify-between">
                                            {{ title }}
                                            <div class="socials hidden md:flex gap-7">
                                                <a href="#" class="icon-Share text-lg"></a>
                                                <a href="#" class="icon-Heart text-lg"></a>
                                            </div>
                                        </h1>
                                        <div class="author flex flex-wrap">
                                            <a href="#">By
                                                <span class="text-primary">{{ author }}</span>
                                            </a>
                                            <a href="{{ link }}">{{ link }}</a>
                                        </div>
                                        <div class="socials flex flex-wrap gap-7">
                                            <a href="#" class="icon-linkedin text-sm"></a>
                                            <a href="#" class="icon-tiktok text-sm"></a>
                                            <a href="#" class="icon-twitter text-sm"></a>
                                        </div>
                                    </div>
                                    <div class="content-inner pt-4 pb-4">                                    
                                        {{ content | safe }}
                                    </div>
                                </div>
                                <aside>
                                    <div class="sticky">
                                        {% include "../_includes/components/card.njk" %}
                                    </div>
                                </aside>
                            </div>
                        </div>
                    </section>
                {% endblock %}
            </main>
            {% block footer %}{% endblock %}
        </div>
        {% block scripts %}
            {% include "../_includes/scripts.njk" %}
        {% endblock %}
    </body>
</html>