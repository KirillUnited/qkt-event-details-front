{% extends "./default.njk" %}
{% set body_class='bg-[#FCFCFC]' %}
{% block header %}
    {{ super() }}
    {% include "../_includes/components/notification.njk" %}
{% endblock %}
{% block content %}
    <section class="section payment-dialog">
        <div class="container xl:max-w-6xl">
            <div class="payment-header">
                {% block payment_header %}
                    <h1 class="text-2xl font-medium capitalize flex items-center gap-2">
                        <i class="icon-lock-outline text-disabled"></i>
                        <span>{{ title }}</span>
                    </h1>
                {% endblock %}
            </div>
            <div class="payment-body md:grid grid-cols-details gap-10">
                <div class="payment-content content-wrap">
                    {{ content | safe }}
                </div>
                {% block payment_sidebar %}
                    <aside class="sidebar">
                        <div class="sticky top-48">
                            <div class="payment-order card flex flex-col">
                                <p class="text-heading text-2xl font-medium">
                                    Order Summary
                                </p>
                                <div class="card-content flex-1 flex flex-col">
                                    <div class="payment-order-body flex-1">
                                        <div class="card-body">
                                            {% include "../_includes/components/order/order-sum.njk" %}
                                        </div>
                                    </div>
                                    <div class="card-footer flex flex-col gap-6 mt-auto">
                                        {% include "../_includes/components/order/order-total.njk" %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </aside>
                {% endblock %}
            </div>
            <p class="text-sm mt-10"><a href="#" class="font-medium underline">Click here to refresh</a> if your page doesnâ€™t load automatically.</p>
        </div>
    </section>
{% endblock %}
{% block footer %}
{% endblock %}
