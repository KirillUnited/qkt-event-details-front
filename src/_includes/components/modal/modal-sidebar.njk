<div class="modal-sidebar flex flex-col order-first">
    <div class="modal-header flex items-center justify-center relative md:hidden p-3">
        <span class="text-xl font-medium text-heading">Add Tickets</span>
    </div>
    <div class="modal-img hidden md:block">
        <img class="w-full" src="/assets/images/Banner-mobile.png" width="433" height="144" alt="{{ title }}"/>
    </div>
    <div class="modal-sidebar-title hidden md:block px-6 pt-6 pb-4">
        <h3 class="text-lg font-medium mb-1">{{ title }}</h3>
        <p class="font-medium text-disabled">Tankwa Town</p>
    </div>
    {% if step_title === "Schedule" %}
        {% include "./modal-sidebar-empty.njk" %}
    {% else %}
        {% include "./modal-sidebar-content.njk" %}
    {% endif %}
    <div class="modal-footer hidden md:flex flex-col gap-2 p-6">
        <div class="flex items-center font-medium gap-2">
            <div class="flex-1">Ticket Quantity</div>
            <div class="text-right basis-1/5">0</div>
        </div>
        <div class="flex items-center font-medium gap-2">
            <div class="flex-1">Subtotal</div>
            <div class="text-right basis-1/5">0</div>
        </div>
        <div class="flex items-center font-medium gap-2">
            <div class="flex-1">Fees</div>
            <div class="text-right basis-1/5">R250</div>
        </div>
        <div class="flex items-center gap-2 text-heading font-medium text-xl">
            <div class="flex-1">Ticket Quantity</div>
            <div class="text-right basis-1/5">R3149</div>
        </div>
    </div>
</div>
