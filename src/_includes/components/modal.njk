<div class="modal flex justify-center items-center" data-modal="{{ step_title|replace(" ", "_") }}" data-close="true">
    <div class="modal-dialog flex flex-col grid-cols-details grid-rows-modal w-full max-w-screen-lg h-screen md:grid md:max-h-[790px]">
        <span class="modal-close" data-close="true">&#10006</span>
        <div class="modal-header p-3">
            {% include "./stepper.njk" %}
        </div>
        <div class="modal-title py-10 px-6">
            {% block title %}
                <h2 class="text-heading text-2xl font-medium mb-4">{{ step_title|safe }}</h2>
                <p>{{ step_desc|safe }}</p>
            {% endblock %}
        </div>
        <div class="modal-content px-6 md:overflow-y-auto">
            {% block content %}
                Content
            {% endblock %}
        </div>
        <div class="modal-footer flex justify-between gap-2 px-6 py-4 sticky bottom-0 md:relative">
            <button class="btn" type="button">BACK</button>
            <button class="btn btn-primary" type="button">NEXT</button>
        </div>
        <div class="modal-sidebar flex flex-col order-first">
            <div class="modal-img">
                <img class="w-full" src="/assets/images/Banner-mobile.png" width="433" height="144" alt="{{ title }}"/>
            </div>
            <div class="modal-sidebar-title px-6 pt-6 pb-4">
                <h3 class="text-lg font-medium mb-1">{{ title }}</h3>
                <p class="font-medium text-disabled">Tankwa Town</p>
            </div>
            {% include "./modal-sidebar-content.njk" %}
            <div class="modal-footer flex flex-col gap-2 p-6">
                <div class="flex items-center font-medium gap-2">
                    <div class="flex-1">Ticket Quantity</div>
                    <div class="text-right basis-1/5">0</div>
                </div>
                <div class="flex items-center font-medium gap-2">
                    <div class="flex-1">Subtotal</div>
                    <div class="text-right basis-1/5">0</div>
                </div>
                <div class="flex items-center font-medium gap-2">
                    <div class="flex-1">Fees</div>
                    <div class="text-right basis-1/5">R250</div>
                </div>
                <div class="flex items-center gap-2 text-heading font-medium text-xl">
                    <div class="flex-1">Ticket Quantity</div>
                    <div class="text-right basis-1/5">R3149</div>
                </div>
            </div>
        </div>
    </div>
</div>